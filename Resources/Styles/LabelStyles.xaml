<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BarlowBold}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <Style x:Key="SubtitleLabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BarlowMedium}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <Style x:Key="RegularLabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BarlowRegular}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <Style x:Key="DescriptionLabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BarlowRegular}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
    </Style>

    <Style x:Key="TextButtonStyle" BasedOn="{StaticResource RegularLabelStyle}" TargetType="TextBlock">
        <Setter Property="Cursor" Value="Arrow"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontFamily" Value="{StaticResource BarlowMedium}"/>
                <Setter Property="TextDecorations" Value="Underline"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>