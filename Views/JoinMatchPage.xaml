<Page x:Class="AhorcadoClient.Views.JoinMatchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:AhorcadoClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinMatchPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <!-- Fondo con opacidad reducida -->
        <Image Source="/Resources/Images/MainMenuBG.png" 
               Stretch="UniformToFill"
               Opacity="0.05"/>

        <!-- Estructura principal -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de navegación superior -->
            <Border Grid.Row="0"
                    Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Border>

            <Border Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                Margin="20"/>
                    <StackPanel Margin="20">
                        <TextBlock Text="{StaticResource Glb_JoinGame}"
                                   Style="{StaticResource HeaderLabelStyle}"
                                   Margin="0 0 0 2"/>
                        <TextBlock Text="{StaticResource JoinGame_Desc}"
                                   TextWrapping="Wrap"
                                   Style="{StaticResource DescriptionLabelStyle}"/>
                    </StackPanel>


                </Grid>
            </Border>
            <DataGrid x:Name="DgMatches"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        Margin="20,80,20,108"
                        Grid.Row="1"
                        IsReadOnly="True"
                        SelectionMode="Single"
                        SelectionUnit="FullRow" Background="Black" BorderBrush="Black">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding MatchID}" Width="Auto"/>
                    <DataGridTextColumn Header="Creador" Binding="{Binding CreatorName}" Width="*"/>
                    <DataGridTextColumn Header="Categoría" Binding="{Binding WordCategory}" Width="*"/>
                    <DataGridTextColumn Header="Dificultad" Binding="{Binding Difficulty}" Width="*"/>
                    <DataGridTextColumn Header="Fecha de Creación" Binding="{Binding CreateDate, StringFormat=dd/MM/yyyy HH:mm}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Border Grid.Row="3"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0 1 0 0" Margin="0,322,0,0">

                <StackPanel Margin="20"
                 Orientation="Horizontal"
                 HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                 Content="{StaticResource Glb_Cancel}"
                 Margin="0 0 10 0"
                 Click="Click_BtnCancel"/>
                    <Button Style="{StaticResource PrimaryButtonStyle}"
                 Content="{StaticResource Glb_JoinGame}"
                 Click="Click_BtnJoinMatch"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>